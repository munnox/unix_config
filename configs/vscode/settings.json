{
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\bash.exe",
    "python.disablePromptForFeatures": [
        "pylint"
    ],
    "files.eol": "\n",
    // "python.pythonPath": "${workspaceFolder}/pyvenv/bin/python",
    "python.envFile": "${workspaceFolder}/.env.sh",
    "gitlens.keymap": "alternate",
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "remote.SSH.remotePlatform": {
        "sia": "linux"
    },
    //"git.path": "C:\\Program Files (x86)\\Git\\bin\\git.exe",
    "window.zoomLevel": 0,
    "files.associations": {
        "settings.json": "jsonc",
        "keybindings.json": "jsonc",
        // "**/defaults/**/*": "yaml",
        // "**/tasks/**/*.yml": "yaml",
        // "**/handler/*.yml": "yaml",
        // "**/*_vars/**/*.yml": "yaml",
        // "**/roles/**/*.yml": "yaml",
        // "**/playbooks/**/*.yml": "yaml",
        // "**/*ansible*/**/*.yml": "yaml",
        // "**/vars/**/*.yml": "yaml",
        // "**/inventory/*/*": "yaml",
        "*.yml": "yaml",
        "*.json": "jsonc",
        "*.yml.j2": "yaml",
        "*.yaml.j2": "yaml",
        "*.json.j2": "jsonc",
        "*.html.j2": "html",
        "*.tf.j2": "terraform",
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/venvs/**": true,
        "**/.venvs/**": true
    },
    // Vim extension settings https://github.com/VSCodeVim/Vim#vscodevim-settings
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.useCtrlKeys": true,
    "vim.debug.loggingLevelForConsole": "debug",
    "vim.normalModeKeyBindings": [
        // {
        //     "before": ["h"],
        //     "after": ["g","h"]
        // },
        {
            "before": ["j"],
            "after": ["g","j"]
        },
        {
            "before": ["k"],
            "after": ["g","k"]
        },
        // {
        //     "before": ["l"],
        //     "after": ["g","l"]
        // },
        {
            "before": ["<leader>", "c", "u"],
            "commands": [
                "expandLineSelection",
                "editor.action.removeCommentLine",
            ]
        },
        {
            "before": ["<leader>", "c", "c"],
            "commands": [
                "expandLineSelection",
                "editor.action.addCommentLine",
            ]
        },
        {
            "before": ["ctrl+h"],
            "commands": [
                "workbench.action.navigateLeft"
            ]
        },
        {
            "before": ["ctrl+j"],
            "commands": [
                "workbench.action.navigateDown"
            ]
        },
        {
            "before": ["ctrl+k"],
            "commands": [
                "workbench.action.navigateUp"
            ]
        },
        {
            "before": ["ctrl+l"],
            "commands": [
                "workbench.action.navigateRight"
            ]
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<leader>", "c", "u"],
            "commands": [
                "editor.action.removeCommentLine",
            ]
        },
        {
            "before": ["<leader>", "c", "c"],
            "commands": [
                "editor.action.addCommentLine",
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    // "vim.handleKeys": {
    //     "<C-a>": false,
    //     "<C-f>": false
    // },
    "redhat.telemetry.enabled": false,
    "vs-kubernetes": {
        "vscode-kubernetes.kubectl-path.linux": "/home/ubuntu/.vs-kubernetes/tools/kubectl/kubectl",
        "vscode-kubernetes.minikube-path.linux": "/home/ubuntu/.vs-kubernetes/tools/minikube/linux-amd64/minikube",
        "vscode-kubernetes.helm-path.linux": "/home/ubuntu/.vs-kubernetes/tools/helm/linux-amd64/helm"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    }
}
